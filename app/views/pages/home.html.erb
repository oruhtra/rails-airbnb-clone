  <div class="row">

  <% @pleureurs.each do |pleureur| %>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <%= link_to user_path(pleureur.id) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= pleureur.photo? ? (cl_image_path pleureur.photo) : ('https://picsum.photos/g/200/300') %>');">
          <div class="card-description">
            <h2><%= pleureur.first_name.capitalize %></h2>
