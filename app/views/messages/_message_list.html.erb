<div class="message-list">
  <% @messages.reverse.each do |m| %>
    <div class="message-inbox">
      <% if m.user == current_user %>
        <div class="message-text margin-right">
          <%= m.content %>
        </div>
        <div class="message-sender-avatar">
          <%= cl_image_tag(m.user.photo, class:' message-sender-avatar')%>
        </div>
      <% else %>
        <div class="message-sender-avatar">
          <%= cl_image_tag(m.user.photo, class:' message-sender-avatar')%>
        </div>
        <div class="message-text">
          <%= m.content %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="message-form-box">
  <%= simple_form_for [@booking, @message] do |f| %>
  <%= hidden_field_tag(:user_id, @user.id) %>
  <%= f.input :content, label: false %>
  <%= f.submit "send message", class: "btn btn-success", style: "width: 100%" %>
  <% end %>
</div>
