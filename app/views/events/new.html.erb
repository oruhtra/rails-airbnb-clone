<!-- simple form pour affiche lieu, date, titre  -->

<div class="wrap img-cover" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://cdn-europe1.new2.ladmedia.fr/var/europe1/storage/images/europe1/societe/bebe-rom-de-champlan-polemique-apres-un-enterrement-refuse-706292/14100902-1-fre-FR/Bebe-rom-de-Champlan-polemique-apres-un-enterrement-refuse.jpg')";>
  <div class= "container">
    <div class= "row">
      <div class= "col-xs-12 col-sm-6 col-sm-offset-3 form">
      <h2 class= "text-center">Create an event</h2>
      <%= simple_form_for [@event] do |f| %>
        <%= f.input :date %>
        <%= f.input :location %>
        <%= f.input :title %>
        <div class="text-center">
        <%= f.submit class:"btn btn-danger margin_bottom"%>
        </div>
      <% end %>
      </div>
    </div>
  </div>

</div>

