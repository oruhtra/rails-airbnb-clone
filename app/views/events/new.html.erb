<!-- simple form pour affiche lieu, date, titre  -->

<div class="wrap img-cover">
  <div class= "container form-box">
    <div class= "row">
      <div class= "col-xs-12 form">
      <div class="text-center"><img src="http://moziru.com/images/purple-rose-clipart-png-tumblr-10.png" style="max-width: 150px; max-height: auto;" /> </div>
      <h2 class= "text-center" style="padding-bottom: 50px; font-weight: bolder; font-size: 40px;">Create an event</h2>
      <%= simple_form_for [@event] do |f| %>
        <%= f.input :title, label: false, placeholder: "Event title" %>
        <%= f.input :location, label: false, placeholder: "Event location" %>
        <%= f.input :date, as: :string, input_html: { class: "datepicker" }, label: false, placeholder: "Event date" %>
        <div class= "text-center margin_top">
          <% if policy(Event).create? %>
        <%= f.submit "R.I.P", class:"btn-medium" %>
        <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>

</div>

